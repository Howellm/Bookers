<h1>Editing Book</h1>
<%= form_with model:@book, local:true do |f| %>
  <div class="actions">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="actions">
    <p>Body</p>
    <%= f.text_area :body%>
  </div>
  <div class="actions">
    <%= f.submit "Update Book"%>
  </div>
  <%= link_to "Show", book_path(f)%>
  <span>|</span>
  <%= link_to "Back", books_path%>
<% end %>


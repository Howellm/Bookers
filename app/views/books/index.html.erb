<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan = "3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", books_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <div class="actions">
    <p>Title</p>
    <%= f.text_field :title %>
  </div>
  <div class="actions">
    <p>Body</p>
    <%= f.text_area :body%>
  </div>
  <div class="actions">
    <%= f.submit "Create book" %>
  </div>
<% end %>